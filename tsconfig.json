{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "lib": ["dom", "es2015"],
    "sourceMap": false,
    "baseUrl": "./",
    "removeComments": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "test/unit"
  ],
  "exclude": [
    "node_modules",
    "types/**/*.ts"
  ]
}
